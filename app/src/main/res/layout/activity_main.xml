<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/none" />

        <ImageView
            android:id="@+id/imageView_mr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/none"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_mr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/none" />

        <Button
            android:id="@+id/button_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/re" />

        <Button
            android:id="@+id/button_mr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bitmapGray" />

        <Button
            android:id="@+id/button_LG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lineGrey" />

        <TextView
            android:id="@+id/textView_2G"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/seekBar_2G"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="128" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>